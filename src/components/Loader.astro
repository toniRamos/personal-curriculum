---
// Loader component similar to Brittany Chiang's portfolio
---

<div class="loader-wrapper" id="loader">
	<div class="loader">
		<div class="loader-logo">
			<div class="logo-square">
				<span class="logo-text">AR</span>
			</div>
		</div>
	</div>
</div>

<style>
	.loader-wrapper {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-color: #0a192f;
		z-index: 9999;
		display: flex;
		justify-content: center;
		align-items: center;
		transition: all 0.25s cubic-bezier(0.645, 0.045, 0.355, 1);
	}

	.loader-wrapper.fade-out {
		opacity: 0;
		visibility: hidden;
	}

	.loader {
		max-width: 100px;
		width: 100%;
		color: #64ffda;
		text-align: center;
	}

	.loader-logo {
		animation: fade-in 1s ease-in-out 0.5s both;
	}

	.logo-square {
		width: 80px;
		height: 80px;
		border: 3px solid #64ffda;
		border-radius: 4px;
		display: flex;
		justify-content: center;
		align-items: center;
		margin: 0 auto;
	}

	.logo-text {
		color: #64ffda;
		font-size: 28px;
		font-weight: 400;
		font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
		user-select: none;
	}

	@keyframes fade-in {
		0% {
			opacity: 0;
		}
		100% {
			opacity: 1;
		}
	}
</style>

<script>
	// Hide loader after page loads
	window.addEventListener('load', () => {
		const loader = document.getElementById('loader');
		if (loader) {
			setTimeout(() => {
				loader.classList.add('fade-out');
				setTimeout(() => {
					loader.style.display = 'none';
				}, 250);
			}, 1000); // Show loader for 1 second minimum
		}
	});
</script>
