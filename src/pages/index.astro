<style>
	.home-container {
		min-height: calc(100vh - 80px);
		display: flex;
		align-items: center;
		padding: 2rem 0;
	}

	.container {
		max-width: 1000px;
		margin: 0 auto;
		padding: 0 1rem;
		width: 100%;
	}

	.wip-section {
		background: white;
		border-radius: 20px;
		padding: 3rem;
		box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
		text-align: center;
		border: 1px solid #e9ecef;
	}

	.wip-icon {
		font-size: 4rem;
		margin-bottom: 1rem;
		animation: bounce 2s infinite;
	}

	.wip-title {
		font-size: 3rem;
		font-weight: 700;
		color: #333;
		margin: 0 0 0.5rem 0;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.wip-subtitle {
		font-size: 1.2rem;
		color: #666;
		margin: 0 0 2rem 0;
		font-style: italic;
	}

	.wip-content {
		max-width: 800px;
		margin: 0 auto;
	}

	.wip-description {
		font-size: 1.1rem;
		color: #555;
		line-height: 1.6;
		margin-bottom: 3rem;
	}

	.features-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
		margin-bottom: 3rem;
	}

	.feature-card {
		background: #f8f9fa;
		padding: 2rem 1.5rem;
		border-radius: 12px;
		border: 2px solid transparent;
		transition: all 0.3s ease;
	}

	.feature-card:hover {
		border-color: #667eea;
		transform: translateY(-4px);
		box-shadow: 0 8px 25px rgba(102, 126, 234, 0.15);
	}

	.feature-icon {
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}

	.feature-title {
		font-size: 1.3rem;
		font-weight: 600;
		color: #333;
		margin: 0 0 1rem 0;
	}

	.feature-description {
		color: #666;
		line-height: 1.5;
		margin: 0;
		font-size: 0.95rem;
	}

	.progress-section {
		background: #f8f9fa;
		padding: 2rem;
		border-radius: 12px;
		margin-bottom: 3rem;
		text-align: left;
	}

	.progress-title {
		font-size: 1.4rem;
		font-weight: 600;
		color: #333;
		margin: 0 0 1.5rem 0;
		text-align: center;
	}

	.progress-list {
		list-style: none;
		padding: 0;
		margin: 0;
		max-width: 500px;
		margin: 0 auto;
	}

	.progress-item {
		padding: 0.75rem 0;
		font-size: 1rem;
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

	.progress-item.completed {
		color: #28a745;
		font-weight: 500;
	}

	.progress-item.wip {
		color: #ffc107;
		font-weight: 500;
	}

	.progress-item.pending {
		color: #6c757d;
	}

	.cta-section {
		text-align: center;
	}

	.cta-text {
		font-size: 1.1rem;
		color: #555;
		margin: 0 0 1.5rem 0;
	}

	.cta-button {
		display: inline-block;
		background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
		color: white;
		padding: 1rem 2rem;
		border-radius: 8px;
		text-decoration: none;
		font-weight: 600;
		font-size: 1.1rem;
		transition: all 0.3s ease;
		box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
	}

	.cta-button:hover {
		transform: translateY(-2px);
		box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
	}

	/* Animaci√≥n bounce */
	@keyframes bounce {
		0%, 20%, 50%, 80%, 100% {
			transform: translateY(0);
		}
		40% {
			transform: translateY(-10px);
		}
		60% {
			transform: translateY(-5px);
		}
	}

	/* Responsive Design */
	@media (max-width: 768px) {
		.home-container {
			padding: 1rem 0;
		}

		.wip-section {
			padding: 2rem 1.5rem;
		}

		.wip-title {
			font-size: 2.2rem;
		}

		.wip-icon {
			font-size: 3rem;
		}

		.features-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.feature-card {
			padding: 1.5rem 1rem;
		}

		.progress-section {
			padding: 1.5rem;
		}
	}

	@media (max-width: 480px) {
		.wip-section {
			padding: 1.5rem 1rem;
		}

		.wip-title {
			font-size: 1.8rem;
		}

		.wip-description {
			font-size: 1rem;
		}

		.feature-title {
			font-size: 1.2rem;
		}

		.feature-description {
			font-size: 0.9rem;
		}

		.cta-button {
			padding: 0.875rem 1.5rem;
			font-size: 1rem;
		}
	}
</style>
